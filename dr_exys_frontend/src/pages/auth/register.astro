<body>

<!-- Header -->
    <header class="header">
        <div class="logo-container">
            <span class="logo-icon">üè•</span>
            <span>DR. EXYS</span>
        </div>
    </header>

  <main class="main-container">
    <div class="register-card">
      <div class="logo">
        <h1>Registrar</h1>
      </div>

      <div class="medical-badge">
        ü©∫ Registro exclusivo para profissionais de sa√∫de
      </div>

      <div id="message"></div>

      <form id="registerForm">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-input" type="email" id="email" name="email" required placeholder="dr.joao@clinica.com" />
        </div>
        <!--
        <div class="form-group">
          <label for="username">Nome de Usu√°rio</label>
          <input class="form-input" type="text" id="username" name="username" required placeholder="dr_joao_silva" />
        </div>
        -->

        <div class="form-row">
  <div class="form-group half-width">
    <label for="password">Senha</label>
    <input class="form-input" type="password" id="password" name="password" required placeholder="Sua senha segura" />
  </div>
  <div class="form-group half-width">
    <label for="password_confirm">Confirmar Senha</label>
    <input class="form-input" type="password" id="password_confirm" name="password_confirm" required placeholder="Confirme sua senha" />
  </div>
</div>

        <button type="submit" class="submit-btn" id="submitBtn">Criar Conta</button>
      </form>

      <div class="link">
        J√° possui conta? <a href="/auth/login">Fa√ßa login aqui</a>
      </div>

      <!-- Back button  -->
    <div class="back-container">
        <a href="/" class="back-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Voltar
        </a>
    </div>

    <div class="terms">
                Ao continuar, voc√™ concorda com nossos <a href="/termos-uso">Termos de Uso</a> e confirma que leu nossa <a href="/politica-privacidade">Pol√≠tica de Privacidade</a>
            </div>

     
  </main>

  <script type="module">
    const form = document.getElementById('registerForm');
    const messageDiv = document.getElementById('message');
    const submitBtn = document.getElementById('submitBtn');

    const authService = {
      async register(data) {
        const response = await fetch('http://192.168.1.4:8081/api/v1/auth/register/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (!response.ok) {
          const error = await response.json();
          throw error;
        }

        return await response.json();
      }
    };

    function showMessage(msg, type = 'error') {
      messageDiv.innerHTML = `<div class="message ${type}">${msg}</div>`;
      setTimeout(() => { messageDiv.innerHTML = ''; }, 6000);
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = {
        email: formData.get('email'),
        username: formData.get('username'),
        password: formData.get('password'),
        password_confirm: formData.get('password_confirm')
      };

      if (data.password !== data.password_confirm) {
        showMessage('As senhas n√£o coincidem.');
        return;
      }

      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Criando conta...';
        await authService.register(data);
        showMessage('Conta criada com sucesso! Redirecionando...', 'success');
        setTimeout(() => {
          window.location.href = '/auth/login';
        }, 2000);
      } catch (error) {
        let msg = 'Erro ao criar conta.';
        if (error.message) msg = error.message;
        showMessage(msg);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Criar Conta M√©dica';
      }
    });
  </script>
</body>
