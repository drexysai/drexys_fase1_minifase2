<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar - Dr. Exys</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8feff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
       
        .logo-container {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .logo-icon {
            font-size: 2rem;
        }
        
        /* Back button */
        .back-container {
            text-align: center;
            padding: 2rem;
            max-width: 600px;
            margin: 0 auto;
            width: 100%;
        }
        
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #225474;
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 500;
            font-family: 'Inter', sans-serif;
            transition: opacity 0.2s;
        }
        
        .back-button:hover {
            opacity: 0.8;
        }
        
        /* Main container */
        .main-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .login-card {
            background: #FFF;
            border-radius: 16px;
            padding: 4rem;
            width: 100%;
            max-width: 680px;
            box-shadow: 0 8px 32px rgba(34, 84, 116, 0.12);
            border: 1px solid rgba(34, 84, 116, 0.08);
        }
        
        .login-title {
            font-family: 'Outfit', sans-serif;
            font-size: 2.5rem;
            font-weight: 600;
            color: #29A8AF;
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        /* Form elements */
        .form-group {
            margin-bottom: 2rem;
        }
        
        .form-label {
            display: block;
            margin-bottom: 0.75rem;
            color: #225474;
            font-size: 1rem;
            font-weight: 600;
            font-family: 'Inter', sans-serif;
        }
        
        .form-input {
            width: 100%;
            padding: 1.25rem 1.5rem;
            border: 1px solid rgba(34, 84, 116, 0.2);
            border-radius: 10px;
            font-size: 1.1rem;
            font-family: 'Inter', sans-serif;
            transition: all 0.2s;
            background: #FFF;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #29A8AF;
            box-shadow: 0 0 0 3px rgba(41, 168, 175, 0.1);
        }
        
        .form-input::placeholder {
            color: #94a3b8;
        }
        
        /* Password field with toggle */
        .password-field {
            position: relative;
        }
        
        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #64748b;
            padding: 0.25rem;
            transition: color 0.2s;
        }
        
        .password-toggle:hover {
            color: #29A8AF;
        }
        
        /* Submit button */
        .submit-btn {
            width: 100%;
            padding: 1.25rem;
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
            color: #FFF;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            font-weight: 600;
            font-family: 'Outfit', sans-serif;
            cursor: pointer;
            transition: all 0.2s;
            margin-top: 1.5rem;
            box-shadow: 0 4px 16px rgba(34, 84, 116, 0.25);
        }
        
        .submit-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 16px rgba(34, 84, 116, 0.3);
        }
        
        .submit-btn:active {
            transform: translateY(0);
        }
        
        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        /* Links */
        .login-link {
            text-align: center;
            margin-top: 2rem;
            color: #64748b;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
        }
        
        .login-link a {
            color: #29A8AF;
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-link a:hover {
            text-decoration: underline;
        }
        
        /* Medical badge */
        .medical-badge {
            background: linear-gradient(120deg, #f8feff 0%, rgba(41, 168, 175, 0.1) 100%);
            border: 1px solid rgba(34, 84, 116, 0.2);
            color: #225474;
            padding: 1rem 1.5rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            text-align: center;
            font-size: 1rem;
            font-weight: 500;
            font-family: 'Inter', sans-serif;
        }
        
        /* Messages */
        .message {
            padding: 0.875rem 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.875rem;
            font-family: 'Inter', sans-serif;
            text-align: center;
        }
        
        .message.success {
            background: rgba(209, 250, 229, 0.9);
            color: #065f46;
            border: 1px solid rgba(5, 150, 105, 0.3);
        }
        
        .message.error {
            background: rgba(254, 226, 226, 0.9);
            color: #991b1b;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }
        
        /* Loading */
        .loading {
            display: none;
            text-align: center;
            margin: 1rem 0;
            font-family: 'Inter', sans-serif;
        }
        
        .spinner {
            border: 3px solid rgba(34, 84, 116, 0.1);
            border-top: 3px solid #29A8AF;
            border-radius: 50%;
            width: 32px;
            height: 32px;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 0.5rem;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .header {
                padding: 1rem;
            }
            
            .logo-container {
                font-size: 1.3rem;
            }
            
            .logo-icon {
                font-size: 1.8rem;
            }
            
            .main-container {
                padding: 1rem;
            }
            
            .login-card {
                padding: 2.5rem;
                max-width: 100%;
                margin: 0;
                border-radius: 12px;
            }
            
            .login-title {
                font-size: 2rem;
                margin-bottom: 2rem;
            }
            
            .medical-badge {
                padding: 0.875rem 1.25rem;
                font-size: 0.95rem;
                margin-bottom: 1.75rem;
            }
            
            .form-group {
                margin-bottom: 1.75rem;
            }
            
            .form-label {
                font-size: 0.95rem;
                margin-bottom: 0.5rem;
            }
            
            .form-input {
                padding: 1rem 1.25rem;
                font-size: 1rem;
                border-radius: 8px;
            }
            
            .submit-btn {
                padding: 1rem;
                font-size: 1.1rem;
                border-radius: 8px;
                margin-top: 1.25rem;
            }
            
            .login-link {
                margin-top: 1.5rem;
                font-size: 0.95rem;
            }
            
            .back-container {
                padding: 1.5rem;
            }
        }
        
        @media (max-width: 480px) {
            .header {
                padding: 0.875rem;
            }
            
            .logo-container {
                font-size: 1.2rem;
            }
            
            .logo-icon {
                font-size: 1.6rem;
            }
            
            .main-container {
                padding: 0.5rem;
            }
            
            .login-card {
                padding: 2rem;
                border-radius: 10px;
            }
            
            .login-title {
                font-size: 1.75rem;
                margin-bottom: 1.75rem;
            }
            
            .medical-badge {
                padding: 0.75rem 1rem;
                font-size: 0.9rem;
                margin-bottom: 1.5rem;
            }
            
            .form-group {
                margin-bottom: 1.5rem;
            }
            
            .form-label {
                font-size: 0.9rem;
                margin-bottom: 0.5rem;
            }
            
            .form-input {
                padding: 0.875rem 1rem;
                font-size: 0.95rem;
            }
            
            .password-toggle {
                right: 0.75rem;
            }
            
            .submit-btn {
                padding: 0.875rem;
                font-size: 1rem;
                margin-top: 1rem;
            }
            
            .login-link {
                margin-top: 1.25rem;
                font-size: 0.9rem;
            }
            
            .back-container {
                padding: 1rem;
            }
            
            .back-button {
                font-size: 0.9rem;
            }
        }
        
        @media (max-width: 360px) {
            .login-card {
                padding: 1.5rem;
            }
            
            .login-title {
                font-size: 1.5rem;
            }
            
            .medical-badge {
                padding: 0.625rem 0.875rem;
                font-size: 0.85rem;
            }
            
            .form-input {
                padding: 0.75rem 0.875rem;
                font-size: 0.9rem;
            }
            
            .password-toggle {
                right: 0.625rem;
            }
            
            .submit-btn {
                padding: 0.75rem;
                font-size: 0.95rem;
            }
        }
        
        /* Landscape orientation on small devices */
        @media (max-height: 600px) and (orientation: landscape) {
            .main-container {
                padding: 1rem;
            }
            
            .login-card {
                padding: 2rem;
            }
            
            .login-title {
                font-size: 1.75rem;
                margin-bottom: 1.5rem;
            }
            
            .medical-badge {
                margin-bottom: 1.25rem;
                padding: 0.75rem 1rem;
            }
            
            .form-group {
                margin-bottom: 1.25rem;
            }
            
            .submit-btn {
                margin-top: 1rem;
            }
            
            .back-container {
                padding: 1rem;
            }
        }
        
        /* Touch targets for better mobile interaction */
        @media (hover: none) and (pointer: coarse) {
            .form-input, .submit-btn, .back-button, .login-link a, .password-toggle {
                min-height: 44px;
            }
            
            .submit-btn {
                padding: 1rem;
            }
            
            .form-input {
                padding: 1rem 1.25rem;
            }
            
            .password-toggle {
                padding: 0.5rem;
                right: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Main content -->
    <main class="main-container">
        <div class="login-card">
            <h1 class="login-title">Entrar</h1>
            
            <!-- Medical badge -->
            <div class="medical-badge">
                🩺 Portal exclusivo para profissionais de saúde
            </div>
            
            <!-- Message container -->
            <div id="message"></div>
            
            <!-- Loading indicator -->
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Autenticando...</p>
            </div>
            
            <!-- Login form -->
            <form id="loginForm">
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input" 
                        placeholder="dr.joao@clinica.com" 
                        autocomplete="email"
                        required
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="password">Senha</label>
                    <div class="password-field">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="Digite sua senha" 
                            autocomplete="current-password"
                            required
                        >
                        <button type="button" class="password-toggle" onclick="togglePassword()" aria-label="Mostrar/ocultar senha">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        </button>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn" id="submitBtn">
                    Entrar
                </button>
            </form>
            
            <div class="login-link">
                Novo por aqui? <a href="/auth/register">Cadastre-se</a>
            </div>
            
            <!-- Back button -->
            <div class="back-container">
                <a href="/" class="back-button">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 12H5M12 19l-7-7 7-7"/>
                    </svg>
                    Voltar
                </a>
            </div>
        </div>
    </main>

    <script type="module">
        // AuthService
        const authService = {
            async login(credentials) {
                const response = await fetch('http://192.168.1.4:8081/api/v1/auth/login/', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(credentials)
                });
                
                if (!response.ok) {
                    const error = await response.json();
                    throw error;
                }
                
                const data = await response.json();
                
                // Salvar tokens
                if (data.tokens) {
                    // Usando variáveis em memória ao invés de localStorage
                    window.medicalTokens = {
                        access: data.tokens.access,
                        refresh: data.tokens.refresh,
                        user: data.user
                    };
                }
                
                return data;
            },
            
            isAuthenticated() {
                return !!(window.medicalTokens && window.medicalTokens.access);
            }
        };
        
        // Toggle password visibility
        window.togglePassword = function() {
            const passwordInput = document.getElementById('password');
            const toggleButton = document.querySelector('.password-toggle');
            const isPassword = passwordInput.getAttribute('type') === 'password';
            
            passwordInput.setAttribute('type', isPassword ? 'text' : 'password');
            
            // Update icon based on visibility state
            const svg = toggleButton.querySelector('svg');
            if (isPassword) {
                // Show "eye-off" icon when password is visible
                svg.innerHTML = `
                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/>
                    <path d="M1 1l22 22"/>
                `;
            } else {
                // Show "eye" icon when password is hidden
                svg.innerHTML = `
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                    <circle cx="12" cy="12" r="3"/>
                `;
            }
        }
        
        // Form handling
        const form = document.getElementById('loginForm');
        const submitBtn = document.getElementById('submitBtn');
        const loading = document.getElementById('loading');
        const messageDiv = document.getElementById('message');
        
        // Check if already authenticated
        if (authService.isAuthenticated()) {
            window.location.href = '/dashboard/medico';
        }
        
        function showMessage(message, type = 'error') {
            messageDiv.innerHTML = `<div class="message ${type}">${message}</div>`;
            setTimeout(() => {
                messageDiv.innerHTML = '';
            }, 5000);
        }
        
        function setLoading(isLoading) {
            if (isLoading) {
                loading.style.display = 'block';
                submitBtn.disabled = true;
                submitBtn.textContent = 'Entrando...';
            } else {
                loading.style.display = 'none';
                submitBtn.disabled = false;
                submitBtn.textContent = 'Entrar';
            }
        }
        
        // Input validation
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        
        function validateEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        emailInput.addEventListener('blur', () => {
            const email = emailInput.value.trim();
            if (email && !validateEmail(email)) {
                emailInput.style.borderColor = '#ef4444';
                showMessage('Por favor, insira um email válido.');
            } else {
                emailInput.style.borderColor = '';
            }
        });
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const credentials = {
                email: formData.get('email').trim(),
                password: formData.get('password')
            };
            
            // Basic validation
            if (!credentials.email || !credentials.password) {
                showMessage('Por favor, preencha todos os campos.');
                return;
            }
            
            if (!validateEmail(credentials.email)) {
                showMessage('Por favor, insira um email válido.');
                return;
            }
            
            setLoading(true);
            
            try {
                const response = await authService.login(credentials);
                
                if (response.success) {
                    showMessage('Login realizado com sucesso!', 'success');
                    setTimeout(() => {
                        window.location.href = '/dashboard/medico';
                    }, 1000);
                } else {
                    throw new Error(response.message || 'Erro no login');
                }
                
            } catch (error) {
                let errorMessage = 'Erro ao fazer login. Verifique suas credenciais.';
                
                if (error.errors) {
                    const errors = [];
                    for (const [field, messages] of Object.entries(error.errors)) {
                        if (Array.isArray(messages)) {
                            errors.push(...messages);
                        } else {
                            errors.push(messages);
                        }
                    }
                    errorMessage = errors.join(', ');
                } else if (error.message) {
                    errorMessage = error.message;
                }
                
                showMessage(errorMessage);
            } finally {
                setLoading(false);
            }
        });
        
        // Auto-focus on first input
        emailInput.focus();
    </script>
</body>
</html>