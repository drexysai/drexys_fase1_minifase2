    <script type="module">
        import { authService } from '../../services/auth.js';
        
        // ==========================================
        // VERIFICA√á√ÉO INICIAL COM AUTHSERVICE
        // ==========================================
        
        // Verificar se profissional est√° logado
        if (!authService.isAuthenticated()) {
            alert('Acesso restrito! Redirecionando para login...');
            window.location.href = '/api/v1/auth/login/';
        }
        
        // ==========================================
        // CARREGAR PERFIL M√âDICO
        // ==========================================
        
        async function loadMedicalProfile() {
            try {
                // Tentar carregar via authService primeiro
                let medical = authService.getCurrentMedical();
                
                if (medical) {
                    console.log('‚úÖ Dados do authService encontrados:', medical);
                    updateMedicalInterface(medical, { complete: false });
                }
                
                // Buscar dados atualizados da API
                try {
                    const updatedMedical = await authService.getMedicalProfile();
                    console.log('‚úÖ Dados atualizados da API:', updatedMedical);
                    updateMedicalInterface(updatedMedical, { complete: updatedMedical.is_profile_complete || false });
                } catch (apiError) {
                    console.log('‚ö†Ô∏è Erro ao buscar dados da API, usando dados locais');
                }
                
            } catch (error) {
                console.error('‚ùå Erro ao carregar perfil:', error);
                
                // Fallback: verificar tokens manuais se authService falhar
                const manualToken = localStorage.getItem('accessToken');
                if (manualToken) {
                    console.log('üîÑ Tentando com tokens manuais...');
                    await loadWithManualTokens();
                }
            }
        }
        
        async function loadWithManualTokens() {
            try {
                const token = localStorage.getItem('accessToken');
                
                const response = await fetch('/api/v1/auth/profile/', {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    const medical = data.user;
                    const profileStatus = data.profile_status;
                    
                    console.log('‚úÖ Dados carregados com tokens manuais:', medical);
                    updateMedicalInterface(medical, profileStatus);
                    
                } else if (response.status === 401) {
                    console.log('‚ùå Token expirado');
                    await authService.logout();
                    window.location.href = '/api/v1/auth/login/';
                }
                
            } catch (error) {
                console.error('‚ùå Erro com tokens manuais:', error);
                document.getElementById('userGreeting').textContent = 'Erro ao carregar';
            }
        }
        
        function updateMedicalInterface(medical, profileStatus) {
            const displayName = medical.first_name || medical.email.split('@')[0];
            const fullName = medical.first_name && medical.last_name 
                ? `${medical.first_name} ${medical.last_name}` 
                : displayName;
            
            // Atualizar sauda√ß√£o
            document.getElementById('userGreeting').textContent = `Dr(a). ${displayName}`;
            
            // Atualizar t√≠tulo de boas-vindas
            const welcomeText = medical.first_name 
                ? `Bem-vindo, Dr(a). ${medical.first_name}! ü©∫`
                : `Bem-vindo √† Plataforma M√©dica, ${displayName}! ü©∫`;
            document.getElementById('welcomeTitle').textContent = welcomeText;
            
            // Atualizar badge profissional
            const medicalBadge = document.querySelector('.medical-badge');
            if (medical.is_medical_professional) {
                medicalBadge.innerHTML = 'üë©‚Äç‚öïÔ∏è Profissional';
            } else {
                medicalBadge.innerHTML = 'üë§ Usu√°rio';
                medicalBadge.style.background = 'rgba(255,193,7,0.2)';
            }
            
            // Mostrar detalhes do profissional
            const detailsContent = document.getElementById('detailsContent');
            detailsContent.innerHTML = `
                <div class="detail-item">
                    <span class="detail-label">Nome Completo:</span>
                    <span class="detail-value">${fullName}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email Profissional:</span>
                    <span class="detail-value">${medical.email}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Username:</span>
                    <span class="detail-value">@${medical.username}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Especialidade:</span>
                    <span class="detail-value">${medical.especialidade || authService.getMedicalSpecialty() || 'N√£o informado'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">CRM:</span>
                    <span class="detail-value">${medical.crm || 'N√£o informado'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Status Profissional:</span>
                    <span class="detail-value">
                        <span class="medical-status ${medical.is_medical_professional || authService.isMedicalVerified() ? 'status-verified' : 'status-pending'}">
                            ${medical.is_medical_professional || authService.isMedicalVerified() ? '‚úÖ Profissional de Sa√∫de' : '‚è≥ Usu√°rio Comum'}
                        </span>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Perfil Completo:</span>
                    <span class="detail-value">
                        <span class="medical-status ${profileStatus.complete ? 'status-verified' : 'status-pending'}">
                            ${profileStatus.complete ? '‚úÖ Completo' : '‚è≥ Incompleto'}
                        </span>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Membro desde:</span>
                    <span class="detail-value">${new Date(medical.created_at).toLocaleDateString('pt-BR')}</span>
                </div>
            `;
        }
        
        // ==========================================
