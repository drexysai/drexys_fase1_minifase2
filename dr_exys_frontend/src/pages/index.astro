---
// Componente Astro - Página inicial médica atualizada
---
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dr. Exys - Plataforma de Saúde Inteligente</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8feff;
            color: #225474;
            min-height: 100vh;
        }
        

        
        /* Hero Section */
        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 2rem;
            background: linear-gradient(135deg, #f8feff 0%, rgba(41, 168, 175, 0.05) 50%, #FFF 100%);
        }
        
        .hero-container {
            text-align: center;
            max-width: 900px;
            margin: 0 auto;
        }
        
        .hero-logo {
            width: 20rem;
            height: 20rem;
            object-fit: contain;      
        }
        
        .hero-subtitle {
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 500;
            margin-bottom: 1.5rem;
            color: #29A8AF;
        }
        
        .hero-description {
            font-family: 'Inter', sans-serif;
            font-size: 1.2rem;
            line-height: 1.6;
            color: #64748b;
            margin-bottom: 3rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .hero-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .btn {
            padding: 1.25rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.2s ease;
            display: inline-block;
            font-family: 'Outfit', sans-serif;
            border: 1px solid transparent;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
            color: #FFF;
            box-shadow: 0 4px 16px rgba(34, 84, 116, 0.25);
        }
        
        .btn-secondary {
            background: #FFF;
            color: #225474;
            border: 1px solid rgba(34, 84, 116, 0.2);
            box-shadow: 0 2px 8px rgba(34, 84, 116, 0.1);
        }
        
        .btn:hover {
            transform: translateY(-2px);
        }
        
        .btn-primary:hover {
            box-shadow: 0 6px 20px rgba(34, 84, 116, 0.35);
        }
        
        .btn-secondary:hover {
            background: #f8feff;
            border-color: #225474;
            box-shadow: 0 4px 12px rgba(34, 84, 116, 0.15);
        }
        
        /* Services Section */
        .services-section {
            padding: 6rem 2rem;
            background: #FFF;
        }
        
        .services-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .section-title {
            font-family: 'Outfit', sans-serif;
            text-align: center;
            font-size: 3rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #225474;
        }
        
        .section-subtitle {
            font-family: 'Inter', sans-serif;
            text-align: center;
            font-size: 1.3rem;
            margin-bottom: 4rem;
            color: #29A8AF;
            font-weight: 500;
        }
        
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .service-card {
            background: #FFF;
            border-radius: 16px;
            padding: 2.5rem;
            border: 1px solid rgba(34, 84, 116, 0.1);
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(34, 84, 116, 0.08);
            position: relative;
            overflow: hidden;
        }
        
        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
        }
        
        .service-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 32px rgba(34, 84, 116, 0.15);
            border-color: rgba(41, 168, 175, 0.2);
        }
        
        .service-icon {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            display: block;
        }
        
        .service-title {
            font-family: 'Outfit', sans-serif;
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #225474;
        }
        
        .service-description {
            font-family: 'Inter', sans-serif;
            font-size: 1rem;
            line-height: 1.6;
            color: #64748b;
        }
        
        /* Specialties Section */
        .specialties-section {
            padding: 4rem 2rem;
            background: linear-gradient(135deg, #f8feff 0%, rgba(41, 168, 175, 0.05) 100%);
        }
        
        .specialties-container {
            max-width: 1000px;
            margin: 0 auto;
            text-align: center;
        }
        
        .specialties-title {
            font-family: 'Outfit', sans-serif;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 3rem;
            color: #225474;
        }
        
        .medical-badges {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
        }
        
        .medical-badge {
            background: #FFF;
            color: #225474;
            padding: 1rem 1.5rem;
            border-radius: 50px;
            font-family: 'Inter', sans-serif;
            font-size: 1rem;
            font-weight: 500;
            border: 1px solid rgba(34, 84, 116, 0.15);
            transition: all 0.3s ease;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(34, 84, 116, 0.08);
        }
        
        .medical-badge:hover {
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
            color: #FFF;
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(34, 84, 116, 0.2);
        }
        
        /* Footer Section */
        .footer-section {
            padding: 3rem 2rem;
            text-align: center;
            background: linear-gradient(135deg, #225474 0%, #29A8AF 100%);
            color: #FFF;
        }
        
        .footer-text {
            font-family: 'Inter', sans-serif;
            opacity: 0.9;
            font-size: 1rem;
        }
        
        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            
            .hero-title {
                font-size: 2.5rem;
            }
            
            .hero-subtitle {
                font-size: 1.2rem;
            }
            
            .hero-description {
                font-size: 1rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .section-subtitle {
                font-size: 1.1rem;
            }
            
            .hero-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .btn {
                width: 100%;
                max-width: 300px;
            }
            
            .services-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .service-card {
                padding: 2rem;
            }
            
            .medical-badges {
                gap: 0.5rem;
            }
            
            .medical-badge {
                padding: 0.75rem 1.25rem;
                font-size: 0.9rem;
            }
        }
        
        @media (max-width: 480px) {
            .hero-section {
                padding: 2rem 1rem;
            }
            
            .hero-title {
                font-size: 2rem;
            }
            
            .services-section {
                padding: 3rem 1rem;
            }
            
            .specialties-section {
                padding: 3rem 1rem;
            }
        }
        
        /* Animation classes */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s ease;
        }
        
        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-container">
            <img src="/assets/images/dr-exys-logo.png" alt="Dr. Exys - Plataforma de Saúde Inteligente" class="hero-logo">
            <p class="hero-subtitle">Tecnologia e Inteligência para Profissionais da Saúde</p>
            <p class="hero-description">
                Plataforma completa que integra IA médica especializada, automação WhatsApp, 
                BPO financeiro, telemedicina e gestão empresarial. Tudo que seu consultório 
                ou clínica precisa em um só lugar.
            </p>
            
            <div class="hero-buttons">
                <a href="/auth/register" class="btn btn-primary">Cadastrar Profissional</a>
                <a href="/auth/login" class="btn btn-secondary">Acessar Plataforma</a>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
        <div class="services-container">
            <h2 class="section-title">Nossos Serviços</h2>
            <p class="section-subtitle">Soluções completas para modernizar sua prática médica</p>
            
            <div class="services-grid">
                <!-- IA Especializada -->
                <div class="service-card fade-in">
                    <span class="service-icon">🤖</span>
                    <h3 class="service-title">IA Especializada para Saúde</h3>
                    <p class="service-description">
                        Agente de Inteligência Artificial treinado especificamente para apoiar médicos 
                        e profissionais de saúde. Consultas 24h sobre procedimentos, medicamentos, 
                        códigos TUSS, CID-10 e boas práticas clínicas.
                    </p>
                </div>

                <!-- Telemedicina -->
                <div class="service-card fade-in">
                    <span class="service-icon">📱</span>
                    <h3 class="service-title">Telemedicina com IA</h3>
                    <p class="service-description">
                        Plataforma moderna para consultas por telemedicina com IA assistente integrada. 
                        Agendamento online, consultas por vídeo, geração automática de resumos 
                        e emissão de documentos médicos.
                    </p>
                </div>

                <!-- WhatsApp Automação -->
                <div class="service-card fade-in">
                    <span class="service-icon">💬</span>
                    <h3 class="service-title">Secretária Virtual WhatsApp</h3>
                    <p class="service-description">
                        Atendimento automatizado 24/7 via WhatsApp. Agendamento de consultas, 
                        confirmação de presença, cadastro de pacientes e respostas automáticas 
                        baseadas em IA treinada para área de saúde.
                    </p>
                </div>

                <!-- BPO Financeiro -->
                <div class="service-card fade-in">
                    <span class="service-icon">💰</span>
                    <h3 class="service-title">BPO Financeiro Médico</h3>
                    <p class="service-description">
                        Terceirização completa da operação financeira. Controle de contas, 
                        emissão de boletos, cobranças automatizadas, conciliação bancária 
                        e relatórios gerenciais especializados para clínicas.
                    </p>
                </div>

                <!-- Contabilidade -->
                <div class="service-card fade-in">
                    <span class="service-icon">📊</span>
                    <h3 class="service-title">Contabilidade Especializada</h3>
                    <p class="service-description">
                        Solução completa para clínicas e consultórios: departamento pessoal, 
                        fiscal/tributário, contábil e paralegal. Especializado em CRM, CRO, 
                        CRF, Anvisa, ANS e outros conselhos de classe.
                    </p>
                </div>

                <!-- Marketing Digital -->
                <div class="service-card fade-in">
                    <span class="service-icon">📈</span>
                    <h3 class="service-title">Marketing Digital Médico</h3>
                    <p class="service-description">
                        Presença digital estratégica para profissionais de saúde. Criação de sites, 
                        gestão de redes sociais, campanhas Google Ads e Meta Ads voltadas 
                        à captação de pacientes.
                    </p>
                </div>

                <!-- ReceptIA -->
                <div class="service-card fade-in">
                    <span class="service-icon">🤖</span>
                    <h3 class="service-title">ReceptIA - Avatar Presencial</h3>
                    <p class="service-description">
                        Totem com avatar humanizado para atendimento na recepção. Interação por voz, 
                        consulta à agenda, marcação de horários e cadastro de pacientes com 
                        integração aos sistemas da clínica.
                    </p>
                </div>

                <!-- Gestão de Investimentos -->
                <div class="service-card fade-in">
                    <span class="service-icon">📈</span>
                    <h3 class="service-title">Gestão de Investimentos</h3>
                    <p class="service-description">
                        Gestão profissional dos recursos financeiros da clínica ou profissional. 
                        Análise de perfil, montagem de carteira, monitoramento de performance 
                        e relatórios especializados.
                    </p>
                </div>

                <!-- Concierge Executivo -->
                <div class="service-card fade-in">
                    <span class="service-icon">🎯</span>
                    <h3 class="service-title">Concierge Executivo Médico</h3>
                    <p class="service-description">
                        Serviço premium de conveniência: compra de passagens, reserva de hotéis, 
                        agendamento de compromissos, gestão de agenda pessoal e profissional 
                        com suporte via WhatsApp.
                    </p>
                </div>

                <!-- ERP Médico -->
                <div class="service-card fade-in">
                    <span class="service-icon">🏥</span>
                    <h3 class="service-title">ERP Médico Dr. Exys</h3>
                    <p class="service-description">
                        Solução integrada de gestão para clínicas: prontuários, agenda inteligente, 
                        financeiro completo, integração com convênios (TISS), módulo de exames 
                        e BI clínico com IA embarcada.
                    </p>
                </div>

                <!-- Corretora de Seguros -->
                <div class="service-card fade-in">
                    <span class="service-icon">🛡️</span>
                    <h3 class="service-title">Corretora de Seguros Médica</h3>
                    <p class="service-description">
                        Corretagem especializada para profissionais de saúde: seguro de responsabilidade 
                        civil profissional, seguro de vida, auto e consultoria personalizada 
                        com acompanhamento completo.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Specialties Section -->
    <section class="specialties-section">
        <div class="specialties-container">
            <h2 class="specialties-title">Especialidades Atendidas</h2>
            <div class="medical-badges">
                <span class="medical-badge">👨‍⚕️ Médicos</span>
                <span class="medical-badge">👩‍⚕️ Enfermeiros</span>
                <span class="medical-badge">🦴 Fisioterapeutas</span>
                <span class="medical-badge">🧠 Psicólogos</span>
                <span class="medical-badge">🦷 Dentistas</span>
                <span class="medical-badge">💊 Farmacêuticos</span>
                <span class="medical-badge">🩺 Clínicas</span>
                <span class="medical-badge">🏥 Hospitais</span>
                <span class="medical-badge">🔬 Laboratórios</span>
                <span class="medical-badge">👁️ Oftalmologistas</span>
                <span class="medical-badge">👂 Otorrinolaringologistas</span>
                <span class="medical-badge">🤱 Pediatras</span>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <section class="footer-section">
        <p class="footer-text">
            © 2024 Dr. Exys - Transformando a prática médica com tecnologia e inteligência artificial
        </p>
    </section>

    <script type="module">
        // Check if professional is already logged in
        if (window.medicalTokens && window.medicalTokens.access) {
            try {
                const payload = JSON.parse(atob(window.medicalTokens.access.split('.')[1]));
                const now = Date.now() / 1000;
                if (payload.exp > now) {
                    window.location.href = '/dashboard/medico';
                }
            } catch (e) {
                window.medicalTokens = null;
            }
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe all fade-in elements
        document.querySelectorAll('.fade-in').forEach(element => {
            observer.observe(element);
        });
    </script>
</body>
</html>